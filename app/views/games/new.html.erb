<h1>New Game</h1>
<p>What is the longest word you can find?</p>
<% @letters.each do |letter| %>
  <span><%= letter %></span>
<% end %>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input id="letters_given" name="letters_given" type="hidden" value="<%= @letters %>" />
  <input id="start_time" name="start_time" type="hidden" value="<%= @start_time %>" />
  <input type="text" name="guessed_value" placeholder="Guess">
  <input type="submit" value="GUESS">
</form>
